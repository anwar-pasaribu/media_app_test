<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents" />

    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="textAppearanceListItem">@style/Ma.Widget.TextAppearanceListItem</item>
        <item name="textAppearanceListItemSecondary">@style/Ma.Widget.TextAppearanceListItemSecondary</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="textAppearanceListItem">@style/Ma.Widget.TextAppearanceListItem</item>
        <item name="textAppearanceListItemSecondary">@style/Ma.Widget.TextAppearanceListItemSecondary</item>
    </style>

    <style name="Ma.Widget.TextAppearanceListItem" parent="@style/TextAppearance.MaterialComponents.Body1">
    </style>

    <style name="Ma.Widget.TextAppearanceListItemSecondary" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:alpha">0.60</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

</resources>
